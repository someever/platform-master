<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id ="approveExecutor"  class ="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" >
		<property name ="corePoolSize" value ="2" />
		<property name ="keepAliveSeconds" value ="1800" />
		<property name ="maxPoolSize" value ="9" />
		<property name ="queueCapacity" value ="100" />
	</bean>

	<bean id ="addTaskExecutor"  class ="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" >
		<property name ="corePoolSize" value ="2" />
		<property name ="keepAliveSeconds" value ="1800" />
		<property name ="maxPoolSize" value ="9" />
		<property name ="queueCapacity" value ="100" />
	</bean>

</beans>

